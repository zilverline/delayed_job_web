<h1>Stats</h1>
<table class="stats">
  <tr>
    <th class="status">
      environment
    </th>
    <th>
      <%=h Sinatra::Application.environment.to_s %>
    </th>
  </tr>
  <tr>
    <th class="status">
      failed
    </th>
    <th>
      <%= delayed_jobs(:failed, @filters).count %>
    </th>
  </tr>
  <tr>
    <th class="status">
      pending
    </th>
    <th>
      <%= delayed_jobs(:pending, @filters).count %>
    </th>
  </tr>
  <tr>
    <th class="status">
      working
    </th>
    <th>
      <%= delayed_jobs(:working, @filters).count %>
    </th>
  </tr>
</table>
<%= poll %>
